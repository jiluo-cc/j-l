{
  "name": "@j-l/dti",
  "version": "1.0.0-beta.1",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "prepublishOnly": "pnpm build"
  },
  "main": "index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "tsup": {
    "entry": [
      "source/index.ts"
    ],
    "splitting": false,
    "clean": true,
    "dts": false,
    "format": [
      "esm",
      "cjs"
    ],
    "minify": true,
    "onSuccess": "pnpm tsc"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}

{
  "name": "@j-l/prettier-config",
  "version": "1.0.0-alpha.2",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "prettier": ">= 3.0.0"
  },
  "files": [
    "dist"
  ],
  "description": "Prettier 配置",
  "main": "dist/index.cjs",
  "type": "module",
  "module": "dist/index.js",
  "author": {
    "name": "章生",
    "email": "me@jiluo.cc",
    "url": "https://www.jiluo.cc"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "tsup": {
    "entry": [
      "source/index.ts"
    ],
    "splitting": false,
    "clean": true,
    "minify": true,
    "format": [
      "esm",
      "cjs"
    ]
  }
}
